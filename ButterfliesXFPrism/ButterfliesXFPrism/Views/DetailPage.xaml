<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ButterfliesXFPrism.Views.DetailPage"
             Title="{Binding Butterfly.Name}">

    <ScrollView  Orientation = "Vertical" VerticalOptions="StartAndExpand">
        <StackLayout>
            <Image Source="{Binding Butterfly.ImageSource}" HeightRequest="200" Aspect="AspectFit" />
            <Label Text="{Binding Butterfly.Description}" Margin="20,0,20,0"/>
        </StackLayout>
    </ScrollView>
</ContentPage>